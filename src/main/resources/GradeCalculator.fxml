<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tobscore.sideprojects.gradecalc.controller.MainController">
  <children>
   <MenuBar useSystemMenuBar="true" VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem disable="true" mnemonicParsing="false" text="Importieren" />
            <MenuItem disable="true" mnemonicParsing="false" text="Exportieren" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem disable="true" mnemonicParsing="false" text="Einstellungen…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem disable="true" mnemonicParsing="false" text="Beenden" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Studium">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#displayNewSubjectDialog" text="Neues Fach">
                    <accelerator><KeyCodeCombination alt="UP" code="N" control="UP" meta="DOWN" shift="UP" shortcut="UP" /> </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" text="Neues Modul">
                <accelerator><KeyCodeCombination alt="UP" code="N" control="UP" meta="DOWN" shift="DOWN" shortcut="UP" /> </accelerator>
            </MenuItem>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#openAboutDialog" text="Über" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <VBox fx:id="subjectList" prefHeight="256.0" prefWidth="590.0">
         <VBox.margin>
            <Insets left="30.0" right="20" top="50.0" />
         </VBox.margin>
         <children>
            <fx:include source="SubjectListElement.fxml"></fx:include>
         </children>
      </VBox>
  </children>
  <stylesheets>
    <URL value="@style.css" />
  </stylesheets>
</VBox>
